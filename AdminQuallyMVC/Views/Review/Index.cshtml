@model  IEnumerable<QuallyLib.Review>
@{
    ViewData["Title"] = "Отзывы";
}

<h3 class="text-center">Пользователи</h3>
<table class="table table-light">
    <thead>
        <tr class="text-center">
            <th scope="col">Пользователь</th>
            <th scope="col">Дата</th>
            <th scope="col">Имя</th>
            <th scope="col">Одобрено</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr class="text-center">
                <td>@review.UserID</td>
                <td>@review.Date</td>
                <td>@review.Name</td>
                <td>@review.Approved</td>
                <td>
                    <a asp-controller="Review" asp-action="Details" asp-route-id="@review.Id" class="btn btn-sm btn-secondary">Подробнее</a>
                    <form class="d-inline" asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id" method="post">
                        <button type="submit" class="btn btn-secondary btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
