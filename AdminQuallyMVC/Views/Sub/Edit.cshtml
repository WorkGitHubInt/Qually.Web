@model QuallyLib.SubModel
@{
    ViewData["Title"] = "Редактирование подписки";
}
@using QuallyLib;

<h3 class="text-center">Изменить подписку @Model.Id</h3>
<div>
    <form asp-controller="Sub" asp-action="Edit" method="post">
        <div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Duration">Длительность</label>
                <input type="text" asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lvl">Уровень подписки</label><br />
                <select multiple class="form-control" asp-for="Lvl" asp-items="Html.GetEnumSelectList<SubscriptionLvl>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sum">Стоимость</label>
                <input type="text" asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Название</label>
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title"></span>
            </div>
            <input type="submit" value="Подтвердить" class="btn btn-secondary" />
        </div>
    </form>
</div>