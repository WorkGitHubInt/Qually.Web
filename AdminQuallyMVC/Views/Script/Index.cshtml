@model IEnumerable<QuallyLib.Script>
@{
    ViewData["Title"] = "Управление скриптами";
}

<h3 class="text-center">Скрипты</h3>
<div>
    <div class="d-flex justify-content-center" style="margin-bottom:20px">
        <a asp-controller="Script" asp-action="Add" class="d-block btn btn-secondary" style="margin:5px">Добавить скрипт</a>
    </div>
    @foreach (var script in Model)
    {
        <div class="d-flex justify-content-center">
            <h5>@script.Title</h5>
        </div>
        <div class="d-flex justify-content-center">
            <h6>Версия: @script.Version</h6>
        </div>
        <div class="d-flex justify-content-center">
            <a style="margin:10px" class="btn-sm btn btn-secondary" asp-controller="Script" asp-action="Edit" asp-route-id="@script.Id">Изменить</a>
            <form style="margin:10px" asp-controller="Script" asp-action="Delete" asp-route-id="@script.Id" method="post">
                <button type="submit" class="btn btn-secondary btn-sm">Удалить</button>
            </form>
        </div>
    }
</div>