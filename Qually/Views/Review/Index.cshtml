@model ReviewModel
@{
    ViewData["Title"] = "Отзывы";
}
<div>
    <h3 class="text-center">Написать отзыв</h3>
    <div style="width:60%; margin: 0 auto; text-align:center">
        <form asp-action="Add" asp-controller="Review">
            <div>
                <div class="form-group">
                    <label asp-for="Review.UserID">Ваш ID</label>
                    <input type="text" asp-for="Review.UserID" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Review.Name">Ваш никнейм/имя (по желанию)</label>
                    <input type="text" asp-for="Review.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Review.Date" value="@DateTime.Now" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Review.Message">Сообщение</label>
                    <textarea asp-for="Review.Message" class="form-control" rows="7"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" style="width:200px; height:55px" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <h3 class="text-center">Отзывы</h3>
    @foreach (var review in Model.Reviews)
    {
        @if (review.Approved)
        {
                <div class="review" style="background-color: #dee2e6; border: #bec2c5 1px solid; border-radius: 5px; padding: 5px; margin: 0 50px 10px 50px;">
                    <p style="float:right; margin-right:5px; color:gray">@review.Date.ToString("dd.MM.yyyy")</p>
                    <h6>@review.Name</h6>
                    <p>@review.Message</p>
                </div>
        }
    }
</div>
